# Wallet Connect
NEXT_PUBLIC_WC_PROJECT_ID=your_walletconnect_project_id

# Smart Contract
NEXT_PUBLIC_CONTRACT_ADDRESS=0x...

# Alchemy (for RPC)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# Solana Network & RPC (for Solana wallets)
# Options: mainnet-beta | devnet | testnet
NEXT_PUBLIC_SOLANA_NETWORK=devnet
# Optional: custom RPC endpoint. If empty, uses clusterApiUrl(network)
NEXT_PUBLIC_SOLANA_RPC_URL=

# SPL Token mints (optional)
# Set these to filter balances for USDC/USDT or other tokens
# Example mainnet:
# NEXT_PUBLIC_USDC_MINT=EPjFWdd5AufqSSqeM2q8XxhipvYMR2iNrDrS1n1fKX6
# NEXT_PUBLIC_USDT_MINT=Es9vMFrzaCERZzY7zGd6W9Y7RrkY3gNzF2KphcGZ8k2
NEXT_PUBLIC_USDC_MINT=
NEXT_PUBLIC_USDT_MINT=

# Database (Optional - for production)
DATABASE_URL=postgresql://username:password@host:port/database

# MySQL Database Configuration (for event listener)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=predix
DB_SSL=false

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# API Keys for content crawling
CRAWLER_API_KEY=your_crawler_api_key

# Solana Program Configuration (optional)
PROGRAM_ID=
IDL_PATH=

# Event Listener Configuration
EVENT_LISTENER_ENABLED=false
EVENT_LISTENER_SYNC_INTERVAL=5000
EVENT_LISTENER_BATCH_SIZE=100
EVENT_LISTENER_RETRY_ATTEMPTS=3
EVENT_LISTENER_RETRY_DELAY=1000

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/event-listener.log

# Security Configuration
API_SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Environment
NODE_ENV=development